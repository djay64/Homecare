<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilProprietaireFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_titre_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MON PROFIL"
            android:textColor="@color/colorOrange"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">
        </TextView>
        <TextView
            android:id="@+id/tv_nom_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="25dp">
        </TextView>
        <TextView
            android:id="@+id/tv_prenom_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="25dp">
        </TextView>
        <TextView
            android:id="@+id/tv_adresse_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse du bien..."
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="80dp">
        </TextView>
        <ImageButton
            android:id="@+id/btn_add_biens"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            android:layout_marginTop="80dp"
            />
        <ImageButton
            android:id="@+id/btn_modi_bien"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_crayon"
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>
</FrameLayout>